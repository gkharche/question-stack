<div class="row">

<div class="col-md-4 col-sm-4 col-md-offset-4 ">
{{#each errors}}
<div class="alert alert-danger">
<p>{{text}}</p>
</div>

{{/each}}
</div>
<div class="col-md-4 col-sm-4 col-md-offset-4 ">

<form action="/users/signup" method="post">
<div class="panel panel-default">
    <div class="panel-heading">
        <h4> Register  Users </h4>
    </div>
    <div class="panel-body">
    <div class="form-group">
            <label>Name</label>
            <input class="form-control" placeholder="Name" value="{{name}}" name="name">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" placeholder="Email" value="{{email}}" name="email">
    </div>

    <div class="form-group">
        <label>Password</label>
        <input class="form-control" type="password" placeholder="password" name="password">
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input class="form-control" type="password" placeholder="Confirm Password" name="password2">
    </div>
     </div>
    <div class="panel-footer">
        <button type="submit" class="btn btn-primary">Submit Button</button>
        <button type="reset" class="btn btn-default">Reset Button</button>
    </div>
</div>
</form>

</div>
</div>